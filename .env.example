# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=baseball_analytics
DB_USER=your_db_username
DB_PASSWORD=your_secure_password

# Application Configuration
R_CONFIG_ACTIVE=development  # development, staging, or production
APP_SECRET_KEY=generate_a_random_secret_key_here

# Authentication (for shinymanager)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme_in_production

# Monitoring & Analytics (optional)
SENTRY_DSN=your_sentry_dsn_if_using
GOOGLE_ANALYTICS_ID=your_ga_id_if_using

# Email Notifications (optional for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# AWS/Cloud Storage (optional for file uploads)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
S3_BUCKET_NAME=baseball-analytics-uploads

# License Key (for white-label deployments)
LICENSE_KEY=your_license_key_here
TEAM_ID=sbu
